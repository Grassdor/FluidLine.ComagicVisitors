server {
       listen 80;
       listen [::]:80;

       server_name localhost;

       

       location / {
        root /var/www/comagic/src;
        index ComagicVisitors.php;
       }
        location ~ \.php$ {
            include snippets/fastcgi-php.conf;
            fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;
        }
       error_page  405     =200 $uri;
}